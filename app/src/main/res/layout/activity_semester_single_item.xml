<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:background="@color/cardview_light_background"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <com.psassistant.student_assistant.Utils.LetterImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/iv_Subject_Letter"
            android:layout_margin="8dp"

            />

        <TextView
            android:id="@+id/tv_Subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/iv_Subject_Letter"
            android:text="Subjects"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/icon_download"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_alignBottom="@+id/iv_Subject_Letter"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:drawableEnd="@drawable/ic_file_download_black_24dp" />

        <TextView
            android:id="@+id/tvTimeDayDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/icon_download"
            android:layout_alignBottom="@+id/icon_download"
            android:layout_alignParentRight="true"

            android:layout_marginEnd="44dp"
            android:layout_marginRight="57dp"
            android:layout_marginBottom="10dp"
            android:text="Click to Download" />


    </RelativeLayout>


</android.support.v7.widget.CardView>